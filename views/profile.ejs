<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>IoT Minds Profile</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">IoT Minds</a>
			</div>
			<div class="navbar-content">
				<ul class="nav navbar-nav navbar-left">
					<li><a href="#">Channels</a></li>
					<li><a href="#">Documentation</a></li>
					<li><a href="#">Support</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><a href="/logout">Logout</a></li>				
				</ul>    			
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-sm-12">
				<div style="padding-top: 5px; padding-left:25px; padding-bottom: 25px;" class="well">
					<h3><%= user.username %></h3>
					<div style="padding-top: 10px;">
						<a href="" class="btn btn-primary" role="button">Edit Profile</a>
						<a href="" class="btn btn-primary" role="button">Get API Keys</a>
					</div>
				</div>
			</div>
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab" href="#home">My Channels</a></li>
					<li><a data-toggle="tab" href="#create_channel">Create New Channel</a></li>
					<li><a data-toggle="tab" href="#sharing">Sharing</a></li>
					<li><a data-toggle="tab" href="#edit_profile">Edit Profile</a></li>
					<li><a data-toggle="tab" href="#manage">API Keys</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div id="home" class="tab-pane fade in active">
					<div class="col-sm-12">
						<% if (channels[0] == null) {%>
							<h5>You can create new channel by using "Create New Channel" tab.</h5>
						<%}%>
						<% channels.forEach(function(channel){ %>
						<div class="col-md-4">
							<div class="thumbnail">
								<img src="<%= channel.image_url %>" alt="<%= channel.name %>">
								<div class="caption">
									<h3 align="center"><%= channel.name %></h3>
									<h5 align="center"><%= channel.created_at %></h5>
									<p><%= channel.description %></p>
									<p align="center">
										<a href="/channels/<%= channel.id %>" class="btn btn-primary" role="button">Visit</a> 
										<a href="#" class="btn btn-default" role="button">Edit</a>
										<a href="/channels/delete?id=<%= channel.id %>" class="btn btn-danger" role="button">Delete</a>
									</p>
								</div>
							</div>
						</div>
						<% }); %>
					</div>			
				</div>
				<div id="create_channel" class="tab-pane fade">
					<div class="col-sm-6 col-sm-offset-3">
						<h1><span class="fa fa-sign-in"></span> Create a new Channel</h1>

						<!-- show any messages that come back with authentication -->
						<!-- LOGIN FORM -->
						<form action="/channels/new" method="post">
							<div class="form-group">
								<label>Channel Name</label>
								<input type="text" class="form-control" name="channel_name">
							</div>
							<div class="form-group">
								<label>Channel Description</label>
								<input type="text" class="form-control" name="channel_description">
							</div>
							<div class="form-group">
								<label>Channel Image URL</label>
								<input type="text" class="form-control" name="img_url">
							</div>

							<button type="submit" class="btn btn-success btn-lg">Create</button>
						</form>

						<hr>
					</div>
				</div>
				<div id="sharing" class="tab-pane fade">
					Statistics is going here please wait
				</div>
				<div id="edit_profile" class="tab-pane fade">
					Profile editing zone
				</div>

				<div id="manage" class="tab-pane fade">

				</div>

				<!-- COMPONENT LISTING AREA-->
			</div>
		</body>
		</html>
